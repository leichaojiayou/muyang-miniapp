/**页面布局**/
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page-head{
    padding: 10rpx;
    text-align: center;
}
.page-head-title{ 
    display: inline-block;
    padding: 0 40rpx 20rpx 40rpx;
    font-size: 32rpx;
    color: #BEBEBE;
}
.page-head-line{
    margin: 0 auto;
    width: 80%;
    height: 2rpx;
    background-color: #D8D8D8;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-foot{
  margin: 100rpx 0 30rpx 0;
  text-align: center;
  color: #1aad19;
  font-size: 30rpx;
}


